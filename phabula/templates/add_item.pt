<metal:body fill-slot="body">
<body>
<style scoped="scoped">

body {
    margin: 0;
    padding: 0;
}
#add_block {
    margin: 60px auto;
    width: 800px;
}
.link-button {
    background: #8890FF;
    display: block;
    padding: 7px 7px;
    text-align: center;
    text-decoration: none;
    color: #fff;
    font-weight: bold;
    border-radius: 2px;
}

